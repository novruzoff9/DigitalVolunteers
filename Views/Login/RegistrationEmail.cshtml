@model EntityLayer.Concrete.User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RegistrationEmail</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
          integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">


</head>
<body>
    <main style="width: 100%; display: flex; flex-direction: column; align-items: center; margin-bottom: 30px;">
        <table style="width: 100%; margin-top: 50px;">
            <tr>
                <td style="width: 50%; text-align: center;">
                    <img width="200" src="https://www.digitalvolunteers.xyz/Images/new%20Logo.png" alt="">
                </td>
                <td style="width: 50%; text-align: center;">
                    <img width="200" src="https://www.digitalvolunteers.xyz/Images/unec%20logo%20png.png" alt="">
                </td>
            </tr>
        </table>
        <div style="margin-top: 50px;">
            <h3 style="text-align: center; color: #131850; font-weight:500; font-size:24px;">Hörmətli @Model.Name @Model.Surname,</h3>
            <p style="font-size: 18px; color: #222; text-align: center;">
                Rəqəmsal könüllülər təşkilatının rəqəmsal platforması üçün qeydiyyatınız uğurla tamamlanmışdır. <br>
                Kabinetinizə giriş üçün aşağıdakı məlumatlardan istifadə edə bilərsiniz.
            </p>
        </div>
        <table style="width: 100%; margin-top: 50px;">
            <tr>
                <td style="width: 10%; text-align: center;">
                </td>
                <td style="width: 35%; text-align: center;">
                    <div style="margin-top: 20px; border: 1px solid #222;">
                        <p style="background-color: #006bce; color: #fff; margin: 0; padding: 4px 8px;">
                            <i class="fas fa-user"></i>İstifadəçi adı:
                        </p>
                        <p style="margin: 0; padding: 4px 8px;">@Model.UserName</p>
                    </div>
                </td>
                <td style="width: 10%; text-align: center;">
                </td>
                <td style="width: 35%; text-align: center;">
                    <div style="margin-top: 20px; border: 1px solid #222;">
                        <p style="background-color: #006bce; color: #fff; margin: 0; padding: 4px 8px;">
                            <i class="fas fa-key"></i>Şifrə:
                        </p>
                        <p style="margin: 0; padding: 4px 8px;">@Model.Password</p>
                    </div>
                </td>
                <td style="width: 10%; text-align: center;">
                </td>
            </tr>
        </table>
        <div style="margin-top: 30px; text-align: center;">
            <a href="https://www.digitalvolunteers.xyz/" style="text-decoration: none; padding: 8px 20px; background-color: #006bce;
            color: white; border-radius: 8px; font-weight: 500; font-size: 20px;">Sayta keçid</a>
        </div>
        <div style="width: 100%; margin-top: 50px;">
            <h3 style="text-align: center; font-size: 24px;">Kabinetin üstünlükləri</h3>
            <table style="width: 100%; margin-top: 20px;">
                <tr>
                    <td style="width: 10%; text-align: center;">
                    </td>
                    <td style="width: 20%; text-align: center;">
                        <h5 style="font-size:24px;">Bir kliklə təbdirə qeydiyyat</h5>
                        <p>
                            Təşkilatımız tərəfindən keçirilən tədbirlərə artıq sadəcə bir klik etməklə qeydiyyatdan keçə
                            bilərsiniz.
                        </p>
                    </td>
                    <td style="width: 10%; text-align: center;">
                    </td>
                    <td style="width: 20%; text-align: center;">
                        <h5 style="font-size:24px;">İdarə heyətinə bir başa müraciət</h5>
                        <p>
                            Təşkilatımızın idarə heyəti vəzifələrinə artıq rahatlıqla müraciət göndərə, daha sonra
                            müraciətinizin statusunu izləyə bilərsiniz.
                        </p>
                    </td>
                    <td style="width: 10%; text-align: center;">
                    </td>
                    <td style="width: 20%; text-align: center;">
                        <h5 style="font-size:24px;">Sertifikatlarınızı vaxtında əldə etmək</h5>
                        <p>
                            Təşkilatımız tərəfindən keçirilən sertifikatlı təlimlərdən əldə etdiyiniz sertifikatların PDF
                            variantları bir başa kabinetinizə yüklənəcəkdir.
                        </p>
                    </td>
                    <td style="width: 10%; text-align: center;">
                    </td>
                </tr>
            </table>
        </div>
    </main>

</body>
</html>

