<body>
    <style>
        .header-right img {
            width: 70px;
            height: 70px;
            border-radius: 50%;
        }

        header .mini-menu {
            display: none;
            position: absolute;
            top: 100px;
            padding: 20px;
            border-radius: 8px;
            background-color: white;
            box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
            z-index: 5;
        }

        header .profile-menu {
            right: 50px;
        }

            header .profile-menu ul {
                list-style: none;
                padding: 0;
                margin: 0;
            }

                header .profile-menu ul .menu-line {
                    margin: 6px 0;
                }

                header .profile-menu ul li {
                    padding: 4px 8px;
                    cursor: pointer;
                }

                    header .profile-menu ul li a {
                        display: flex;
                        flex-direction: row;
                        align-items: center;
                    }

                    header .profile-menu ul li i {
                        color: #212529;
                    }

                    header .profile-menu ul li p {
                        font-size: 18px;
                        margin: 0;
                        margin-left: 8px;
                        color: #212529;
                        font-weight: 500;
                    }

                    header .profile-menu ul li:not(.profile-details):hover {
                        background-color: #bcbdc3;
                    }

                    header .profile-menu ul li:not(.profile-details) {
                        border-radius: 8px;
                    }

                    header .profile-menu ul li:not(:first-child) {
                        margin-top: 6px;
                    }

                    header .profile-menu ul li:not(:last-child) {
                        margin-bottom: 6px;
                    }

                header .profile-menu ul .profile-details {
                    display: flex;
                    flex-direction: row;
                    align-items: center;
                }

                    header .profile-menu ul .profile-details img {
                        width: 60px;
                        height: 60px;
                        border-radius: 50%;
                    }

                    header .profile-menu ul .profile-details .name-role {
                        margin-left: 8px;
                    }

                        header .profile-menu ul .profile-details .name-role .name {
                            color: #080708;
                            font-weight: 500;
                        }

                        header .profile-menu ul .profile-details .name-role .department {
                            font-weight: 400;
                            color: #aaa;
                        }

        section#home article .article-right p.slogan {
            font-family: "IBM Plex Mono", monospace !important;
        }
    </style>
    <header>
        <div class="header-left">
            <a href="/Home/Index"><img src="~/Images/new Logo - white.png" alt="" /></a>
