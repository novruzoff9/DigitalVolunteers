@{
    Layout = null;
    UserManager UserM = new UserManager(new EfUserDAL());
    int sessionid;
    User user = new User();
    if(Session["UserID"] != null)
    {
        sessionid = (int)Session["UserID"];
        user = UserM.GetByID(sessionid);
    }
    else
    {

        sessionid = 0;
    }
