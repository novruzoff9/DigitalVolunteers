                        <p>@department</p>
                    </div>
                    <div class="footer d-flex flex-row justify-content-between mt-2">
                        <p><i class="fas fa-calendar-alt"></i>&nbsp;&nbsp;@item.CreatedTime.ToString("dd MMMM yyyy")</p>
                        <a href="/Admin/UpdateVacancy/@item.VacancyID" class="action-button success">Düzəliş</a>
                    </div>

                </div>
                <a href="/Admin/AppliesofVacancy/@item.VacancyID" class="action-button primary-hover w-100 mt-2">Müraciətlər (@item.Applies.Count)</a>
            </section>
        }

    }
