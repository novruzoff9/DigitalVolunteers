                        else if (item.Department == "WWF") { department = "Fakültələrlə iş"; }
                        else if (item.Department == "FS") { department = "Fakültə heyəti"; }
                        else if (item.Department == "ICD") { department = "Beynəlxalq əməkdaşlıq departamenti"; }
                        else if (item.Department == "Organizer") { department = "Təşkilati işlər departamenti"; }
                        else if (item.Department == "Security") { department = "Nəzarət və təftiş"; }
                        else if (item.Department == "FS-Digital Economy") { department = "Rəqəmsal İqtisadiyyat"; }
                        else if (item.Department == "FS-Russian Economy") { department = "Rus İqtisad Məktəbi"; }
                        else if (item.Department == "FS-Business") { department = "Biznes və Menecement"; }
                        else if (item.Department == "FS-Sabah") { department = "SABAH"; }
                        else if (item.Department == "FS-ISE") { department = "Beynəlxalq İqtisadiyyat Məktəbi"; }
                        else if (item.Department == "FS-Design") { department = "UNEC Dizayn Məktəbi"; }
                        else if (item.Department == "FS-Finance") { department = "Maliyyə və Mühasibat"; }
                        else if (item.Department == "FS-TUDIFAK") { department = "Türk Dünyası İqtisad"; }
                        else if (item.Department == "FS-Engineering") { department = "Mühəndislik"; }
                        else if (item.Department == "FS-Economy") { department = "İqtisadiyyat və İdarəetmə"; }
                        else if (item.Department == "FS-QETM") { department = "Qiyabi və Əlavə Təhsil Mərkəzi"; }


                    }
                    <div class="footer d-flex flex-row justify-content-between mt-2">
                        @if (item.Primary)
                        {
                            <p style="color:goldenrod"><i class="fas fa-star" style="color: goldenrod"></i>&nbsp;Seçilmiş</p>
