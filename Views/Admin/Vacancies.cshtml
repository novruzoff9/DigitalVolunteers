<section id="navigation">
    <div class="tabbtn activetab" data-tab="active">Qüvvədə olanlar</div>
    <div class="tabbtn" data-tab="all">Bütün vakansiyalar</div>
</section>

<div id="vacancies" class="flex-wrap active">
