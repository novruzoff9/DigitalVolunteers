        <i class="fas fa-notes-medical"></i>
        <p>Vakansiya artır</p>
    </a>
    @foreach (var item in Model)
    {
        if (item.Deadline.Year == 2005 || item.Deadline > DateTime.Now)
        {
            <section class="vacancy">
                <p class="title">@item.Title</p>
