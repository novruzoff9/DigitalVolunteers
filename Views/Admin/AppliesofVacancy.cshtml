@using EntityLayer.Concrete
@model List<VacancyApply>
@{
    ViewBag.Title = "AppliesofVacancy";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Style/AdminPanel/Vacancies156.css" rel="stylesheet" />
<div id="vacancies">
    @foreach (var item in Model)
    {
        <section class="vacancy">
            <p class="title">@item.User.Name @item.User.Surname</p>
            <div class="footer d-flex flex-column justify-content-between align-items-start">
                <p>@item.ApplierNote</p>
                <p><i class="fas fa-calendar-alt"></i>&nbsp;&nbsp;@item.ApplyDateTime.ToString("dd MMMM yyyy")</p>
                <a href="#" class="action-button primary">Ətraflı</a>
            </div>
        </section>
    }
</div>