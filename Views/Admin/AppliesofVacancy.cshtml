@using EntityLayer.Concrete
@model List<VacancyApply>
@{
    ViewBag.Title = "AppliesofVacancy";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Style/AdminPanel/Vacancies485.css" rel="stylesheet" />
<div id="vacancies">
    @foreach (var item in Model)
    {
        <section class="vacancy">
            <div class="d-flex flex-row justify-content-between mt-2 align-items-center">
                <img src="@item.User.UserImage" width="60" height="60" style="border-radius:50%"/>
                <p class="title" style="margin:0">@item.User.Name @item.User.Surname</p>
            </div>
            <div class="footer d-flex flex-column justify-content-between align-items-start">
                <p>@item.ApplierNote</p>
                <div class="footer d-flex flex-row justify-content-between mt-2">
                    <p><i class="fas fa-calendar-alt"></i>&nbsp;&nbsp;@item.ApplyDateTime.ToString("dd MMMM yyyy")</p>
                    <a href="/Admin/ApplyDetails/@item.ApplyID" class="action-button primary">Ətraflı</a>
                </div>

            </div>
        </section>
    }
</div>