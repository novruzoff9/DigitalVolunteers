@model EntityLayer.Concrete.News
@{
    ViewBag.Title = "NewsDetails";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<link href="~/Style/Home/News123.css" rel="stylesheet" />

<style>
    .images{
        width: 100%;
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: space-between;
    }
    .images img {
        margin: 15px;
        width: calc(50% - 30px) !important;
    }
</style>

<section id="newsdetails">
    <article>
        <img src="@Model.NewsImage" alt="">
        <p class="header">@Model.NewsTitle</p>
        <p class="text">
            @Html.Raw(Model.NewsCaption)
        </p>
        <div class="blog-footer">
            <p>
                @Model.NewsCreated.ToString("dd MMMM yyyy HH:mm")
            </p>
            <p>
                @Model.Reading baxış &nbsp;<i class="fas fa-eye"></i>
            </p>
        </div>
        @if (Model.Images.Count > 0)
        {
            <h4 class="mt-2">Qalareya</h4>
            <div class="images">
                @foreach (var item in Model.Images)
                {
                    <img src="@item.ImageURL" />
                }
            </div>
        }

        @*<div class="blog-tags">
            <div class="tag">
                <p>#inkişaf</p>
            </div>
            <div class="tag">
                <p>#texnologiya</p>
            </div>
        </div>*@
    </article>
    
    @Html.Action("Suggestions", "News")

</section>